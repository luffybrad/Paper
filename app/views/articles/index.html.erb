<%= content_for :page_title ,"Index"%>
<p style="color: green"><%= notice %></p>

<h1><span class="badge badge-success"><%= @articles.count%></span> Articles</h1>

<div id="articles">
  <% @articles.each do |article| %>
    <div class="card">
  <h5 class="card-header">
  <%= article.title%>
  </h5>
  <div class="card-body">

    <h5 class="card-title">
    <%= article.title %>
    </h5>
    <p class="card-text">
    <%= article.body%>
    </p>
    </div>
    <div class="card-footer">
     <%= link_to "Comment", article, class:"btn btn-primary" %>
    <%= link_to "Edit", edit_article_path(article), class: "btn btn-warning" %>
    <%= link_to "Delete", article,data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" }, class:"btn btn-danger" %>
  </div>
</div>
<br> 
  <% end %>
</div>
<%= link_to "New article", new_article_path, class: "btn btn-success" %>
